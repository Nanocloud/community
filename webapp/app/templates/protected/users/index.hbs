<div class="section">
	<h1>Users</h1>

  {{#link-to 'protected.users.new'}}Add user{{/link-to}}

	<table class="table">
	  <thead>
		<tr>
		  <th>#</th>
		  <th>First Name</th>
		  <th>Last Name</th>
		  <th>Email</th>
		</tr>
	  </thead>
	  <tbody>
	  {{#each model as |user|}}
	   <tr>
		   <th scope="row">{{#link-to "protected.users.user" user}}{{user.id}}{{/link-to}}</th>
		   <td>{{user.firstName}}</td>
		   <td>{{user.lastName}}</td>
		   <td>{{user.email}}</td>
	  </tr>
	  {{/each}}
	  </tbody>
	</table>
</div>
