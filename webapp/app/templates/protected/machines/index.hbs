<div class="section">
  <h1>Machines</h1>

  {{#each machines as |machine|}}
    {{#link-to 'protected.machines.machine' machine}}
      <div class="machine">
        <div class="machine-status {{machine.status}}"></div>
        {{machine.name}}
      </div>
    {{/link-to}}
  {{else}}
    There is no machine.
  {{/each}}

  {{#link-to 'protected.machines.new' class='btn btn-primary pull-xs-right'}}
    Add machine
  {{/link-to}}
  <div class="clearfix"></div>
</div>
